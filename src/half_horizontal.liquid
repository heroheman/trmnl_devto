<div class="layout layout--col gap--small">
  {% render 'devto_header',
    title_size: 'title--small',
    label_size: 'label--tiny',
    gap: 'gap--tiny',
    show_articles_text: false,
    tag: trmnl.plugin_settings.custom_fields_values.tag
  %}
  
  <div class="divider"></div>
  
  <div class="columns" data-overflow-max-cols="1">
    <div class="column">
      {% for article in data %}
    {% render 'article_item',
      title: article.title,
      title_size: 'title--tiny',
      title_clamp: '1',
      show_description: false,
      cover_image: article.cover_image,
      show_image: trmnl.plugin_settings.custom_fields_values.show_thumbnail,
      author: article.user.name,
      author_truncate: 20,
      tags: article.tags,
      max_tags: 2,
      label_size: 'label--tiny',
      meta_gap: 'gap--tiny',
      show_author: true,
      show_tags: true,
      show_reading_time: false
    %}
      {% endfor %}
    </div>
  </div>
</div>

{% render 'devto_footer', tag: trmnl.plugin_settings.custom_fields_values.tag, state: trmnl.plugin_settings.custom_fields_values.state %}

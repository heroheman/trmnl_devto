<div class="layout layout--col gap">
  <div class="columns" data-overflow-max-cols="1">
    <div class="column">
      {% for article in data %}
    {% render 'article_item',
      title: article.title,
      title_size: 'title--small',
      title_clamp: '1',
      description: article.description,
      description_clamp: '2',
      show_description: true,
      cover_image: article.cover_image,
      show_image: false 
      tags: article.tags,
      max_tags: 5,
      reading_time: article.reading_time_minutes,
      label_size: 'label--small',
      meta_gap: 'gap--small',
      show_author: false,
      show_tags: false,
      show_reading_time: false
    %}
      {% endfor %}
    </div>
  </div>
</div>

{% render 'devto_footer', tag: trmnl.plugin_settings.custom_fields_values.tag, state: trmnl.plugin_settings.custom_fields_values.state %}
